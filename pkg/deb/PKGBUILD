pkgname=prasmoid
pkgver=0.0.3
pkgrel=0
pkgdesc="The All in One Development Toolkit for KDE Plasmoids. Build, test, and manage your plasmoids with unparalleled ease and efficiency."
arch=("amd64")
url='https://github.com/PRASSamin/prasmoid'
license=("MIT")
depends=(
	"plasma-sdk"
	"git"
	"qt6-declarative-dev-tools"
)

source=(
	#replace these with absolute paths to the binary - file:// only takes absolute paths
	#or use actual URLs
	"file:///home/northernlights/temp/prasmoid"
	"file:///home/northernlights/temp/LICENSE.md"
	"file:///home/northernlights/temp/README.md"
)
sha256sums=(
	"72e4c2b772188ff7ac3ac1b210238a2b9aff1ef8a2844f11df999a44990dcc96"
	"1f3c5281949e670ffb5efacaae5acd3160eaa5ff1b19c0eab57987581f34fd93"
	"5486397048fab10e2531b192d55fffff80f8e392dd57875e8dee816519b13ddf"
)
package() {
	install -Dm755 prasmoid "${pkgdir}/usr/bin/${pkgname}"
	install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
	install -Dm644 LICENSE.md "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
